@model List<Fiap.Exemplo03.MVC.Models.Fruta>


@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>

@if (TempData["msg"] != null) {

    <div class="alert alert-success">
        @TempData["msg"]
    </div>

}


<table class="table table-striped">

    <tr>
        <th>Nome</th>    
        <th>Organico</th>    
        <th>Semente</th>
        <th>Data Cadastro</th>
        <th>Alterar/Remover</th>
            
    </tr>
        
   

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@(item.Organico? "SIM":"NAO")</td>
            <td>@(item.Semente ? "SIM":"NAO")</td>
            <td>@item.DataCadastro.ToShortDateString()</td>
            
            <td>
                @Html.ActionLink(" ","Alterar",new { id= item.Id}, new { @class = "glyphicon glyphicon-pencil btn btn-danger btn-xs" })
                @Html.ActionLink(" ", "Excluir", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash btn btn-danger btn-xs", onclick="return confirm('Deseja excluir?')" })   
            </td>
            
        </tr>
    }

</table>


