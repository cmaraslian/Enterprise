@model List <Fiap.Exemplo03.MVC.Models.Produtor>



@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>


<table class="table">

    <tr>
        <th>Nome</th>
        <th>Limite</th>
        <th>Certificado</th>
        <th>Data Cadastro</th>
        <th>Alterar/Excluir</th>
    </tr>
    
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@(item.Limite)</td>
            <td>@(item.Certificado ? "SIM" : "NAO")</td>
            <td>@item.DataCadastro.ToShortDateString()</td>
            <td>
                @Html.ActionLink(" ", "Alterar", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil btn btn-danger btn-xs" })
                @Html.ActionLink(" ", "Excluir", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash btn btn-danger btn-xs", onclick = "return confirm('Deseja excluir?')" })
            </td>
        </tr>
    }

</table>