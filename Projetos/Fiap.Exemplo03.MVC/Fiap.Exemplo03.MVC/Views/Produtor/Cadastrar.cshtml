@model Fiap.Exemplo03.MVC.Models.Produtor

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@if (TempData["msg"] != null) {
    <div class="alert alert-success" >
        <h3>@TempData["msg"]</h3>
    </div>
}



@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(f => f.Nome)
        @Html.TextBoxFor(f => f.Nome, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(f => f.Limite)
        @Html.TextBoxFor(f => f.Limite, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(f => f.Certificado)
        @Html.CheckBoxFor(f => f.Certificado)
    </div>
        
    <input type="submit" value="salvar" class="btn btn-primary" />
}



