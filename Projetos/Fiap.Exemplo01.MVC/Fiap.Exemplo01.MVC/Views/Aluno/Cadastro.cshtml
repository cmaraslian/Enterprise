
@{
    ViewBag.Title = "Cadastro";
}

<h2>Cadastro</h2>

<form action="/aluno/salvar" method="post">
    <div class="form-group">
        <label for="id-nome">Nome</label>
        <input type="text" name="nome" id="id-nome" class="form-control" />
    </div>
    <div class="form-group">
        <label for="id-data">Data Nascimento</label>
        <input type="text" name="data" id="id-data" class="form-control" />
    </div>
    <div class="form-group">
        <label for="id-salario">Salário</label>
        <input type="text" name="salario" id="id-salario" class="form-control" />
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
</form>

