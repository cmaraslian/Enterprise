@model TreinoNAC.Models.Funcionario

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de funcionario</h2>

@if (TempData["msg"] != null)
{
    <div  class="alert alert-info">@TempData["msg"]</div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor( f => f.Nome)
        @Html.TextBoxFor(f => f.Nome, new {@class = "form-control" })
        @Html.ValidationMessageFor(f => f.Nome)
    </div>

    <div class="form-group">
        @Html.LabelFor(f => f.DataCadastro)
        @Html.TextBoxFor(f => f.DataCadastro, new { @class = "form-control" })
        @Html.ValidationMessageFor(f => f.DataCadastro)
    </div>

    <div class="form-group">
        @Html.LabelFor(f => f.Departamento.Nome)
        @Html.DropDownListFor(f => f.Departamento, ViewBag.Departamentos as SelectList, new {@class = "form-control" })
    </div>
    <input type="submit" value="Salvar" class="btn btn-primary" />

}