
@{
    ViewBag.Title = "Abrir";
}

<h2>Abrir</h2>

<form action="/usuario/salvar" method="post">
    <div class="form-group">
        <label for="id-nome">Nome</label>
        <input type="text" name="nome" id="id-nome" class="form-control" />
    </div>
    <div class="form-group">
        <label for="id-idade">Idade</label>
        <input type="number" name="idade" id="id-idade" class="form-control" />
    </div>
    <div class="form-group">
        <label for="id-email">Email</label>
        <input type="text" id="id-email" name="email" class="form-control" />
    </div>
    <input type="submit" value="cadastrar" class="btn-primary" />
</form>


